
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "role": {
            "type": "string",
            "enum": ["administrador", "empleado"],
            "description": "The user's role in the application."
        },
        "estado": {
            "type": "string",
            "enum": ["activo", "inactivo", "pendiente"],
            "description": "The user's status in the application."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of profile creation."
        }
      },
      "required": ["uid", "email", "role", "estado"]
    },
    "Damnificado": {
      "title": "Damnificado",
      "description": "Representa a una persona o familia afectada por un desastre.",
      "type": "object",
      "properties": {
        "nombre": {
          "type": "string",
          "description": "Nombre de la persona."
        },
        "apellido": {
          "type": "string",
          "description": "Apellido de la persona."
        },
        "cedula": {
          "type": "string",
          "description": "Cédula de identidad."
        },
        "nacionalidad": {
            "type": "string",
            "description": "Nacionalidad de la persona."
        },
        "edad": {
            "type": "number",
            "description": "Edad de la persona."
        },
        "genero": {
            "type": "string",
            "enum": ["masculino", "femenino", "otro"],
            "description": "Género de la persona."
        },
        "fecha_nacimiento": {
          "type": "string",
          "format": "date",
          "description": "Fecha de nacimiento."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Correo electrónico de contacto."
        },
        "telefono": {
          "type": "string",
          "description": "Número de teléfono de contacto."
        },
        "direccion": {
          "type": "string",
          "description": "Dirección completa del domicilio afectado."
        },
        "barrio": {
          "type": "string",
          "description": "Barrio o sector."
        },
        "coordenadas": {
          "type": "string",
          "description": "Coordenadas GPS (lat, long)."
        },
        "ciudad": {
          "type": "string",
          "description": "Ciudad de residencia."
        },
        "estado": {
          "type": "string",
          "description": "Estado o provincia."
        },
        "miembros_familia": {
          "type": "string",
          "description": "Descripción del grupo familiar afectado."
        },
        "tipo_vivienda": {
          "type": "string",
          "enum": ["propia", "alquilada", "familiar", "otro"],
          "description": "Tipo de tenencia de la vivienda."
        },
        "condiciones_vivienda": {
          "type": "string",
          "enum": ["leve", "moderado", "grave", "perdida_total"],
          "description": "Nivel de daño en la vivienda."
        },
        "danos_vivienda": {
          "type": "string",
          "description": "Descripción detallada de los daños."
        },
        "fotos_danos": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri"
            },
            "description": "URLs de las fotos de los daños."
        },
        "necesidades": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Lista de necesidades urgentes."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp de creación del registro."
        }
      },
      "required": ["nombre", "apellido", "direccion", "ciudad", "estado", "tipo_vivienda", "condiciones_vivienda", "necesidades"]
    },
    "Voluntario": {
      "title": "Voluntario",
      "description": "Representa a una persona que se ofrece como voluntaria.",
      "type": "object",
      "properties": {
        "nombre": {
          "type": "string",
          "description": "Nombre del voluntario."
        },
        "apellido": {
          "type": "string",
          "description": "Apellido del voluntario."
        },
        "documento_identidad": {
            "type": "string",
            "description": "Documento de identidad del voluntario."
        },
        "edad": {
          "type": "number",
          "description": "Edad del voluntario."
        },
        "direccion": {
          "type": "string",
          "description": "Dirección del voluntario."
        },
        "barrio": {
            "type": "string",
            "description": "Barrio o sector del voluntario."
        },
        "perfil_profesional": {
            "type": "string",
            "description": "Perfil profesional del voluntario."
        },
        "organizacion": {
            "type": "string",
            "description": "Organización a la que pertenece el voluntario."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Correo electrónico de contacto."
        },
        "telefono": {
          "type": "string",
          "description": "Número de teléfono de contacto."
        },
        "habilidades": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Lista de habilidades o áreas de apoyo."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp de creación del registro."
        }
      },
      "required": ["nombre", "apellido", "email", "telefono", "habilidades"]
    },
    "Donacion": {
      "title": "Donacion",
      "description": "Representa una donación recibida.",
      "type": "object",
      "properties": {
        "donante": { "type": "string" },
        "tipo_persona": { "type": "string", "enum": ["natural", "juridica"] },
        "identificacion": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "telefono": { "type": "string" },
        "direccion": { "type": "string" },
        "tipo_donacion": { "type": "string", "enum": ["monetaria", "alimentos", "ropa", "medicamentos", "aseo", "cocina", "frazadas", "otro"] },
        "monto": { "type": "number", "description": "Monto si la donación es monetaria." },
        "descripcion_general": { "type": "string", "description": "Descripción si es monetaria u otro." },
        "articulos": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "articuloId": { "type": "string" },
              "nombre": { "type": "string" },
              "cantidad": { "type": "number" },
              "unidad": { "type": "string" }
            },
            "required": ["nombre", "cantidad", "unidad"]
          }
        },
        "fotos_donacion": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "observaciones": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["donante", "tipo_persona", "identificacion", "tipo_donacion"]
    },
    "Entrega": {
      "title": "Entrega",
      "description": "Representa una entrega de ayuda a un damnificado.",
      "type": "object",
      "properties": {
        "receptorId": { "type": "string" },
        "receptorNombre": { "type": "string" },
        "fecha_entrega": { "type": "string", "format": "date" },
        "articulos": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "articuloId": { "type": "string" },
              "nombre": { "type": "string" },
              "cantidad": { "type": "number" },
              "unidad": { "type": "string" }
            },
            "required": ["nombre", "cantidad", "unidad"]
          }
        },
        "fotos_entrega": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "responsable": { "type": "string" },
        "firmaReceptor": { "type": "string", "format": "uri" },
        "huellaReceptor": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["receptorId", "receptorNombre", "fecha_entrega", "articulos", "responsable"]
    },
    "VisitaTecnica": {
      "title": "Visita Tecnica",
      "description": "Representa una visita técnica o de emergencia a un damnificado.",
      "type": "object",
      "properties": {
        "actaNumero": { "type": "string" },
        "damnificadoId": { "type": "string" },
        "nombreDamnificado": { "type": "string" },
        "apellidoDamnificado": { "type": "string" },
        "cedulaDamnificado": { "type": "string" },
        "telefonoDamnificado": { "type": "string" },
        "direccion": { "type": "string" },
        "barrio": { "type": "string" },
        "ubicacionTipo": { "type": "string", "enum": ["urbano", "rural"] },
        "tipoEscenario": { "type": "string" },
        "condicionVivienda": { "type": "string" },
        "fichaEdan": { "type": "string", "enum": ["si", "no", "na"] },
        "tipoEvento": { "type": "array", "items": { "type": "string" } },
        "otro_tipo_evento": { "type": "string" },
        "descripcionRequerimiento": { "type": "string" },
        "profesionalAsignado": { "type": "string" },
        "fechaVisita": { "type": "string", "format": "date-time" },
        "registroFotografico": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "firmaProfesional": { "type": "string", "format": "uri" }
      },
      "required": ["actaNumero", "damnificadoId", "profesionalAsignado", "fechaVisita", "tipoEvento", "descripcionRequerimiento"]
    },
     "Inventario": {
      "title": "Inventario",
      "description": "Representa un artículo en el inventario de donaciones.",
      "type": "object",
      "properties": {
        "articuloId": { "type": "string", "description": "ID del artículo en el catálogo." },
        "nombre": { "type": "string", "description": "Nombre del artículo." },
        "cantidad": { "type": "number", "description": "Cantidad disponible en stock." },
        "unidad": { "type": "string", "description": "Unidad de medida (ej: kg, unidades, litros)." },
        "lastUpdatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["articuloId", "nombre", "cantidad", "unidad"]
    },
    "Articulo": {
      "title": "Articulo",
      "description": "Representa un artículo maestro en el catálogo de inventario.",
      "type": "object",
      "properties": {
        "nombre": { "type": "string", "description": "Nombre único del artículo." },
        "categoria": { "type": "string", "description": "Categoría del artículo (ej: Alimentos, Ropa, Medicamentos)." },
        "unidad": { "type": "string", "description": "Unidad de medida estándar (ej: kg, und, lts)." }
      },
      "required": ["nombre", "categoria", "unidad"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Colección de perfiles de usuario."
    },
    "/damnificados/{damnificadoId}": {
      "schema": { "$ref": "#/entities/Damnificado" },
      "description": "Colección de todos los damnificados registrados en el sistema."
    },
    "/voluntarios/{voluntarioId}": {
      "schema": { "$ref": "#/entities/Voluntario" },
      "description": "Colección de todos los voluntarios registrados en el sistema."
    },
    "/donaciones/{donacionId}": {
      "schema": { "$ref": "#/entities/Donacion" },
      "description": "Colección de todas las donaciones recibidas."
    },
    "/entregas/{entregaId}": {
      "schema": { "$ref": "#/entities/Entrega" },
      "description": "Colección de todas las entregas de ayuda realizadas."
    },
    "/visitas/{visitaId}": {
      "schema": { "$ref": "#/entities/VisitaTecnica" },
      "description": "Colección de todas las visitas técnicas y de emergencia."
    },
    "/inventario/{itemId}": {
      "schema": { "$ref": "#/entities/Inventario" },
      "description": "Colección para el inventario de donaciones."
    },
    "/catalogoArticulos/{articuloId}": {
      "schema": { "$ref": "#/entities/Articulo" },
      "description": "Colección para el catálogo maestro de artículos."
    }
  }
}

    